<canvas id="myChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  let tableData = document.querySelectorAll('tr');

  let labels = [];

  const data = {
    labels: labels,
    datasets: [
      {
        label: 'Temperature',
        backgroundColor: 'red',
        borderColor: 'red',
        data: [],
        xAxisID: 'xTime',
        yAxisID: 'yRest'
      },
      {
        label: 'Pressure',
        backgroundColor: 'yellow',
        borderColor: 'yellow',
        data: [],
        xAxisID: 'xTime',
        yAxisID: 'yPressure'
      },
      {
        label: 'Air Quality',
        backgroundColor: 'magenta',
        borderColor: 'magenta',
        data: [],
        xAxisID: 'xTime',
        yAxisID: 'yRest'
      },
      {
        label: 'Humidity',
        backgroundColor: 'cyan',
        borderColor: 'cyan',
        data: [],
        xAxisID: 'xTime',
        yAxisID: 'yRest'
      }
    ]
  };

  for (let index = 1; index < tableData.length; index++) {
    labels.push(tableData.item(index).firstChild.nextElementSibling.innerText); // timestamp

    data.datasets[0].data.push(tableData.item(index).children[0].nextElementSibling.innerText); // temperature

    data.datasets[1].data.push(tableData.item(index).children[1].nextElementSibling.innerText); // pressure

    data.datasets[2].data.push(tableData.item(index).children[2].nextElementSibling.innerText); // air quality

    data.datasets[3].data.push(tableData.item(index).children[3].nextElementSibling.innerText); // humidity
  }

  const config = {
    type: 'line',
    data: data,
    options: {
      scales: {
        xTime: {
          display: true,
          title: {
            display: true,
            align: 'center',
            text: 'Time in UTC',
            color: 'white'
          },
          grid: {
            color: 'lightgrey'
          }
        },
        yPressure: {
          display: true,
          title: {
            display: true,
            align: 'center',
            text: 'Pressure',
            color: 'yellow'
          },
          position: 'right',
          grid: {
            color: 'transparent'
          }
        },
        yRest: {
          display: true,
          title: {
            display: true,
            alignt: 'center',
            text: 'Temperature, Air Quality, Humidity',
            color: 'white'
          },
          position: 'left',
          suggestedMin: 0,
          suggestedMax: 100,
          grid: {
            color: 'transparent'
          }
        }
      }
    }
  };

  var myChart = new Chart(
    document.getElementById('myChart'),
    config
  );
</script>
